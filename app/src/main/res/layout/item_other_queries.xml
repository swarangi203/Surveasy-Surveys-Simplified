<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="20dp"
    android:padding="10dp"
    android:layout_marginRight="10dp"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7C842095"
        android:orientation="vertical"
        android:paddingStart="18dp"
        android:padding="12dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
<TableRow

    android:layout_width="wrap_content">

            <TextView
                android:paddingTop="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Name :"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:paddingTop="5dp"
                android:id="@+id/nameofuser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name of user"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

</TableRow>

<TableRow
    android:layout_width="wrap_content"
    >
            <TextView
                android:paddingTop="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text="Title : "
                android:textSize="20sp"  android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:paddingTop="5dp"
                android:id="@+id/titleofquery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your title goes here"  android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

</TableRow>

<TableRow
    android:layout_width="wrap_content">

            <TextView
                android:paddingTop="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="Query : "
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:paddingTop="5dp"
                android:id="@+id/querytext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:textColor="@color/black"

                android:text="Your query goes here"
                android:textSize="18sp"
                android:textStyle="bold" />

</TableRow>


            <TableRow
                android:layout_width="wrap_content"

                >
            <TextView
                android:paddingTop="5dp"


                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="Status : "
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_column="1"
                android:textStyle="bold" />

            <TextView
                android:paddingTop="5dp"
                android:id="@+id/query_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Unsolved"
                android:textColor="#ff0000"
                android:textSize="18sp"
                android:layout_column="2"
                android:textStyle="bold" />
            </TableRow>




<TableRow>
            <TextView
                android:paddingTop="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Feedback : "
                android:textAlignment="center"
                android:textSize="20sp"  android:textColor="@color/black"
                android:textStyle="bold" />

    <EditText
        android:id="@+id/query_feedback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="enter feedback"

        android:paddingTop="5dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

</TableRow>


        </TableLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SUBMIT"
            android:background="#FF871DB6"
            />



    </LinearLayout>



</androidx.cardview.widget.CardView>